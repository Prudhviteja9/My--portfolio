---
import { AnimatedTooltip } from "@/components/ui/AnimatedToolTip";
---

<div class="contact-cta-container">
	<div class="contact-cta-card">
		<!-- Profile Image Section -->
		<div class="contact-image-wrapper">
			<div class="contact-image-glow"></div>
			<img
				src="/images/profile/contact_photo.png"
				alt="Prudhvi Teja Yedla"
				width="280"
				loading="lazy"
				class="contact-image"
			/>
		</div>

		<!-- Text & CTA Section -->
		<div class="contact-content">
			<h1 class="contact-title">have an idea? <br /> let's chat!</h1>

			<div class="contact-email-wrapper">
				<AnimatedTooltip
					href="mailto:yedlaprudhviteja9@gmail.com"
					text="Email me!"
					client:visible
					className="contact-email-link"
					>yedlaprudhviteja9@gmail.com</AnimatedTooltip
				>
			</div>
		</div>
	</div>
</div>

<style>
	.contact-cta-container {
		width: 100%;
		display: flex;
		justify-content: center;
		padding: 2rem 1rem;
		animation: contactFadeIn 0.7s ease-out 0.2s both;
	}

	.contact-cta-card {
		width: 100%;
		max-width: 900px;
		display: flex;
		flex-direction: column-reverse;
		align-items: center;
		justify-content: center;
		gap: 2rem;
		padding: 3rem 2rem;
		border-radius: 24px;
		background: linear-gradient(
			135deg,
			rgba(18, 18, 18, 0.95) 0%,
			rgba(30, 30, 30, 0.95) 50%,
			rgba(25, 25, 25, 0.95) 100%
		);
		border: 2px solid rgba(72, 255, 255, 0.15);
		box-shadow: 0 0 30px rgba(72, 255, 255, 0.1),
			0 0 60px rgba(22, 255, 0, 0.05);
		backdrop-filter: blur(10px);
		transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
		position: relative;
		overflow: hidden;
	}

	/* Animated border glow */
	.contact-cta-card::before {
		content: "";
		position: absolute;
		top: -1px;
		left: -1px;
		right: -1px;
		bottom: -1px;
		background: linear-gradient(
			135deg,
			rgba(72, 255, 255, 0.3),
			transparent 50%,
			rgba(22, 255, 0, 0.2)
		);
		border-radius: 24px;
		z-index: -1;
		opacity: 0;
		transition: opacity 0.4s ease;
	}

	.contact-cta-card:hover::before {
		opacity: 1;
		animation: borderGlow 2s ease-in-out infinite;
	}

	.contact-cta-card:hover {
		border-color: rgba(72, 255, 255, 0.3);
		box-shadow: 0 0 40px rgba(72, 255, 255, 0.2),
			0 0 80px rgba(22, 255, 0, 0.1),
			0 20px 40px rgba(0, 0, 0, 0.3);
		transform: translateY(-8px) scale(1.02);
	}

	/* Image Section */
	.contact-image-wrapper {
		position: relative;
		width: 100%;
		max-width: 280px;
		aspect-ratio: 3 / 4;
		flex-shrink: 0;
	}

	.contact-image-glow {
		position: absolute;
		inset: -20px;
		background: radial-gradient(
			circle,
			rgba(72, 255, 255, 0.3),
			transparent 70%
		);
		border-radius: 32px;
		animation: imagePulseGlow 3s ease-in-out infinite;
	}

	.contact-image {
		position: relative;
		width: 100%;
		height: 100%;
		object-fit: cover;
		border-radius: 20px;
		border: 2px solid rgba(72, 255, 255, 0.2);
		box-shadow: 0 0 20px rgba(72, 255, 255, 0.2);
		transition: all 0.4s ease;
	}

	.contact-cta-card:hover .contact-image {
		border-color: rgba(72, 255, 255, 0.5);
		box-shadow: 0 0 30px rgba(72, 255, 255, 0.4),
			0 10px 30px rgba(0, 0, 0, 0.3);
		transform: scale(1.05);
	}

	/* Content Section */
	.contact-content {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		gap: 2rem;
		text-align: center;
		flex: 1;
	}

	.contact-title {
		font-family: "Antonio", sans-serif;
		font-size: 2.5rem;
		font-weight: 700;
		line-height: 1.2;
		letter-spacing: -0.5px;
		text-transform: uppercase;
		background: linear-gradient(90deg, #ffffff 0%, #72ffff 50%, #16ff00 100%);
		background-clip: text;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		animation: titleGlow 3s ease-in-out infinite;
		margin: 0;
	}

	.contact-email-wrapper {
		display: flex;
		justify-content: center;
	}

	.contact-email-link {
		font-size: 1.25rem;
		font-weight: 700;
		color: #ffffff;
		text-decoration: none;
		border-bottom: 2px solid rgba(72, 255, 255, 0.3);
		padding-bottom: 4px;
		transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
		position: relative;
		display: inline-block;
	}

	.contact-email-link::after {
		content: "";
		position: absolute;
		bottom: -2px;
		left: 0;
		width: 0;
		height: 2px;
		background: linear-gradient(90deg, #48ffff, #16ff00);
		transition: width 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
	}

	.contact-email-link:hover {
		color: #48ffff;
		border-bottom-color: #48ffff;
		text-shadow: 0 0 10px rgba(72, 255, 255, 0.5);
		transform: translateY(-2px);
	}

	.contact-email-link:hover::after {
		width: 100%;
	}

	/* Desktop Layout */
	@media (min-width: 1024px) {
		.contact-cta-card {
			flex-direction: row;
			gap: 3rem;
			padding: 3rem;
			align-items: center;
		}

		.contact-image-wrapper {
			flex: 0 0 280px;
			order: 1;
		}

		.contact-content {
			flex: 1;
			align-items: flex-start;
			text-align: left;
			order: 2;
		}

		.contact-title {
			font-size: 3rem;
		}
	}

	/* Mobile Adjustments */
	@media (max-width: 768px) {
		.contact-cta-container {
			padding: 1.5rem 1rem;
		}

		.contact-cta-card {
			padding: 2rem 1.5rem;
			gap: 1.5rem;
		}

		.contact-title {
			font-size: 2rem;
		}

		.contact-email-link {
			font-size: 1rem;
		}
	}

	/* Animations */
	@keyframes contactFadeIn {
		0% {
			opacity: 0;
			transform: translateY(30px);
		}
		100% {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes imagePulseGlow {
		0%,
		100% {
			box-shadow: 0 0 20px rgba(72, 255, 255, 0.3),
				0 0 40px rgba(72, 255, 255, 0.1);
		}
		50% {
			box-shadow: 0 0 30px rgba(72, 255, 255, 0.5),
				0 0 60px rgba(72, 255, 255, 0.2);
		}
	}

	@keyframes titleGlow {
		0%,
		100% {
			filter: drop-shadow(0 0 8px rgba(72, 255, 255, 0.4));
		}
		50% {
			filter: drop-shadow(0 0 16px rgba(22, 255, 0, 0.4));
		}
	}

	@keyframes borderGlow {
		0%,
		100% {
			box-shadow: 0 0 20px rgba(72, 255, 255, 0.3);
		}
		50% {
			box-shadow: 0 0 40px rgba(72, 255, 255, 0.5),
				0 0 20px rgba(22, 255, 0, 0.3);
		}
	}
</style>
