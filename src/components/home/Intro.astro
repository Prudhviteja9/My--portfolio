---
import Card from "../global/Card.astro";
import Socials from "../socials/Socials.astro";
import Greeting from "./Greeting.svelte";
import TechStack from "../motion/TechStack.astro";
---

<div class="w-[90%] md:w-[600px] lg:w-1/2">
	<Card shadowColor="rgb(4, 57, 57)" className="animate-fadeIn hero-card">
		<div id="intro" class="flex h-fit flex-col text-white">
			<div class="w-full px-5 pt-10 pb-2 lg:px-10">
				<div class="flex h-20 flex-row">
					<div class="mr-1 flex w-20 items-center justify-center profile-avatar">
						<img
							src="/images/profile/contact_photo.png"
							alt="Prudhvi Teja Yedla"
							width="80"
							height="80"
							class="max-w-full rounded-full bg-[#505050] avatar-img"
							loading="eager"
						/>
					</div>
					<div class="ml-2 flex flex-col items-start justify-center">
						<div
							id="name"
							class="animate-gradient text-2xl font-bold name-glow"
						>
							Prudhvi Teja Yedla
						</div>
						<div class="w-full text-xl title-text">AI & ML Engineer</div>
					</div>
				</div>
				<div id="uwu" class="hidden items-center justify-center">
					<img
						src="/images/RythonDev-UwU-compressed.webp"
						alt="RythonDev"
						width="400"
						height="131.8"
					/>
				</div>
				<div class="mt-5 mb-5 text-2xl font-bold">
					<Greeting client:load />, <br class="sm:hidden" />I'm Prudhvi!
				</div>
				<p class="text-left">
					Innovative AI & Data Analyst with an M.S. in Data Science & Analytics, now focusing on ML/CV engineering. I build end-to-end AI solutions using Python, PyTorch, YOLOv8, DeepLabv3, ONNX/TFLite, LangChain, and OpenAI APIs, improving model accuracy (80â€“90%+), automation, and business KPIs.
				</p>

			<div class="mt-8 flex flex-row items-center justify-center">
				<Socials />
			</div>
		</div>
	</div>
</Card>
<TechStack />
</div><style>
	#name {
		background: linear-gradient(
			90deg,
			#16ff00 0%,
			#72ffff 45%,
			#0096ff 100%
		);

		background-size: 300%;

		background-clip: text;
		-webkit-background-clip: text;

		-webkit-text-fill-color: transparent;
		animation: nameGlow 3s ease-in-out infinite;
		transition: all 0.3s ease;
	}

	.hero-card {
		border: 2px solid rgba(72, 255, 255, 0.1);
		background: linear-gradient(
			135deg,
			rgba(18, 18, 18, 0.9) 0%,
			rgba(30, 30, 30, 0.9) 33%,
			rgba(25, 25, 25, 0.9) 66%,
			rgba(19, 19, 19, 0.9) 100%
		) !important;
		backdrop-filter: blur(10px);
	}

	.profile-avatar {
		transition: all 0.3s ease;
	}

	.profile-avatar:hover {
		transform: scale(1.1) rotate(5deg);
	}

	.avatar-img {
		transition: all 0.4s ease;
		box-shadow: 0 0 15px rgba(72, 255, 255, 0.3);
	}

	.profile-avatar:hover .avatar-img {
		box-shadow: 0 0 30px rgba(72, 255, 255, 0.6);
	}

	.name-glow {
		transition: all 0.4s ease;
	}

	.title-text {
		background: linear-gradient(90deg, #72ffff, #16ff00);
		background-clip: text;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		font-weight: 600;
		letter-spacing: 1px;
	}

	@keyframes nameGlow {
		0%, 100% {
			filter: drop-shadow(0 0 8px rgba(22, 255, 0, 0.4));
		}
		50% {
			filter: drop-shadow(0 0 16px rgba(72, 255, 255, 0.6));
		}
	}
</style>
