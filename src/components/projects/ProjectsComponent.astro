			imageSrc="/images/projects/Financial Forecasting & Scenario Modeling.png"
			alt="Financial Forecasting & Scenario Modeling"
			href="https://github.com/Prudhviteja9"
			title="Financial Forecasting & Scenario Modeling"
			label="View Repository"
			description="Comprehensive financial forecasting model using time-series analysis and scenario modeling. Provides revenue projections and risk analysis to support business planning and strategic decision-making."
			tags={[
				{
					text: "Python",
					bgColor: "var(--color-python)",
					textColor: "white",
				},
				{
					text: "Excel",
					bgColor: "var(--color-excel)",
					textColor: "white",
