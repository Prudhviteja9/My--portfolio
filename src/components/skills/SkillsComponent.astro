---
import Card from "../global/Card.astro";
import GradientLine from "../motion/GradientLine.astro";
import Skill from "./Skill.astro";
---

<div class="h-fit w-full pt-20">
	<h1 class="text-center text-5xl section-title">Skills</h1>
	<div class="flex flex-col items-center">
		<div class="w-[90%] pt-10 md:w-[600px] lg:w-1/2">
			<Skill
				className="view-fadeUp"
				title="AI / Machine Learning"
				primaryColor="#19a7ce"
				tags={[
					{
						text: "Python",
						bgColor: "var(--color-python)",
					},
					{
						text: "PyTorch",
						bgColor: "#ee4c2c",
					},
					{
						text: "TensorFlow",
						bgColor: "#ff6f00",
					},
					{
						text: "Scikit-learn",
						bgColor: "#f7931e",
					},
					{
						text: "OpenCV",
						bgColor: "var(--color-opencv)",
					},
					{
						text: "YOLOv8",
						bgColor: "#333333",
						textColor: "white",
					},
					{
						text: "DeepLabv3",
						bgColor: "#1f77b4",
					},
					{
						text: "ONNX Runtime",
						bgColor: "#ffffff",
						textColor: "black",
					},
					{
						text: "TFLite",
						bgColor: "#ff9800",
					},
					{
						text: "CoreML",
						bgColor: "#555555",
					},
					{
						text: "LangChain",
						bgColor: "#1c3144",
						textColor: "white",
					},
					{
						text: "OpenAI API",
						bgColor: "#412991",
					},
					{
						text: "HuggingFace",
						bgColor: "#ffd21e",
						textColor: "black",
					},
				]}
			/>
			<GradientLine height="50px" />
			<Skill
				className="view-fadeUp"
				title="Data Science / Analytics"
				primaryColor="#474F7A"
				tags={[
					{
						text: "Pandas",
						bgColor: "var(--color-blue-800)",
					},
					{
						text: "NumPy",
						bgColor: "#013243",
					},
					{
						text: "Matplotlib",
						bgColor: "#11557c",
					},
					{
						text: "Seaborn",
						bgColor: "#005051",
					},
					{
						text: "SQL",
						bgColor: "#336791",
					},
					{
						text: "Power BI",
						bgColor: "#f2c812",
						textColor: "black",
					},
					{
						text: "Excel",
						bgColor: "#217346",
					},
					{
						text: "Data Cleaning",
						bgColor: "#4a90e2",
					},
					{
						text: "Feature Engineering",
						bgColor: "#7b68ee",
					},
					{
						text: "Statistical Modeling",
						bgColor: "#2a5ccc",
					},
				]}
			/>
			<GradientLine height="50px" />
			<Skill
				className="view-fadeUp"
				title="MLOps / Deployment"
				primaryColor="#a1eebd"
				tags={[
					{
						text: "FastAPI",
						bgColor: "#009485",
					},
					{
						text: "Streamlit",
						bgColor: "#ff0000",
					},
					{
						text: "Docker",
						bgColor: "#2496ed",
					},
					{
						text: "Git",
						bgColor: "#f1502f",
					},
					{
						text: "GitHub",
						bgColor: "#333333",
						textColor: "white",
					},
					{
						text: "CI/CD",
						bgColor: "#4a90e2",
					},
					{
						text: "Model Optimization",
						bgColor: "#9b59b6",
					},
					{
						text: "APIs",
						bgColor: "#17a2b8",
					},
					{
						text: "Webhooks",
						bgColor: "#6f42c1",
					},
				]}
			/>
		</div>
	</div>
</div>

<style>
	.section-title {
		animation: titleGlow 3s ease-in-out infinite;
		letter-spacing: 1px;
		font-weight: 700;
	}

	@keyframes titleGlow {
		0%, 100% {
			text-shadow: 0 0 10px rgba(72, 255, 255, 0.5),
				0 0 20px rgba(22, 255, 0, 0.3);
		}
		50% {
			text-shadow: 0 0 20px rgba(72, 255, 255, 0.8),
				0 0 40px rgba(22, 255, 0, 0.6);
		}
	}
</style>
