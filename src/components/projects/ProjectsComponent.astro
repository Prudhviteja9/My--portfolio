---
import Project from "./Project.astro";
---

<div
	id="projects"
	class="flex h-fit flex-col items-center [perspective:1000px]"
>
	<div class="w-full max-w-[1440px]">
		<Project
			position="left"
			imageSrc="/images/projects/Real-Time Object Counter for Retail Shelves.png"
			alt="Real-Time Object Counter for Retail Shelves"
			href="https://github.com/Prudhviteja9"
			title="Real-Time Object Counter for Retail Shelves"
			label="View Repository"
			description="A real-time computer vision solution that detects and counts products on retail shelves using YOLOv8 and PyTorch. Optimized with TFLite for on-device deployment and integrated with OpenCV for video stream processing."
			tags={[
				{
					text: "PyTorch",
					bgColor: "var(--color-pytorch)",
					textColor: "white",
				},
				{
					text: "YOLOv8",
					bgColor: "var(--color-yolo)",
					textColor: "white",
				},
				{
					text: "TFLite",
					bgColor: "var(--color-tensorflow)",
					textColor: "white",
				},
				{
					text: "OpenCV",
					bgColor: "var(--color-opencv)",
					textColor: "white",
				},
			]}
		/>

		<Project
			position="right"
			imageSrc="/images/projects/Image Segmentation.png"
			alt="Image Segmentation Pipeline with CoreML Export"
			href="https://github.com/Prudhviteja9"
			title="Image Segmentation Pipeline with CoreML Export"
			label="View Repository"
			description="End-to-end image segmentation pipeline using DeepLabv3 in PyTorch with automated CoreML export. Includes heavy data augmentation techniques and supports iOS deployment through CoreMLTools."
			tags={[
				{
					text: "PyTorch",
					bgColor: "var(--color-pytorch)",
					textColor: "white",
				},
				{
					text: "DeepLabv3",
					bgColor: "var(--color-segmentation)",
					textColor: "white",
				},
				{
					text: "CoreMLTools",
					bgColor: "var(--color-coreml)",
					textColor: "white",
				},
				{
					text: "OpenCV",
					bgColor: "var(--color-opencv)",
					textColor: "white",
				},
			]}
		/>

		<Project
			position="left"
			imageSrc="/images/Ascendo Ai.png"
			alt="AscendoAI Community Jobs – Field Service Job Agent"
			href="https://github.com/Prudhviteja9/AscendoAI"
			title="AscendoAI Community Jobs – Field Service Job Agent"
			label="View Repository"
			description="An AI agent designed for the AscendoAI field service community that continuously finds and aggregates field service jobs. It pulls roles from LinkedIn, free job-posting APIs, company RSS feeds, and company career URLs into a single refreshed database. The agent supports hourly refresh, lets users add new sources, and is used to create engaging content for LinkedIn, TikTok, and other platforms while growing the senior and broader field service community."
			tags={[
				{
					text: "Python",
					bgColor: "var(--color-python)",
					textColor: "white",
				},
				{
					text: "APIs",
					bgColor: "var(--color-api)",
					textColor: "white",
				},
				{
					text: "Automation",
					bgColor: "var(--color-automation)",
					textColor: "white",
				},
				{
					text: "AI Agent",
					bgColor: "var(--color-aiagent)",
					textColor: "white",
				},
				{
					text: "Data Pipelines",
					bgColor: "var(--color-datapipeline)",
					textColor: "white",
				},
			]}
		/>

		<Project
			position="right"
			imageSrc="/images/projects/AI Resume Screener.png"
			alt="AI Resume Screener"
			href="https://github.com/Prudhviteja9"
			title="AI Resume Screener"
			label="View Repository"
			description="An intelligent resume screening tool powered by LangChain and OpenAI APIs. Automatically parses, extracts key information, and scores resumes based on job requirements. Built with Streamlit for easy deployment."
			tags={[
				{
					text: "LangChain",
					bgColor: "var(--color-langchain)",
					textColor: "white",
				},
				{
					text: "OpenAI API",
